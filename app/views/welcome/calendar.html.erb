<p id="notice"><%= notice %></p>

<div class="row">
  <div class="flash-alert">
    <% if flash[:alert] %>
    <%= flash[:alert] %>
    <% end %>
  </div>
  <div class="col-lg-12">
    <div id="calendar" class="tab-pane fade in active"></div>
  </div>
</div>


<% if current_user %>
  <div class="row">
    <div class="col-md-3">
      <%= button_to 'Add New Event', new_event_path, :method => "get", :class => "btn btn-warning", :style => "margin-top: 25px; font-size: 18px; width: 60%; height: 50px;"%>
    </div>
    <div class="col-md-3">
      <%= button_to 'View All Events', events_path, :method => "get", :class => "btn btn-info", :style => "margin-top: 25px; font-size: 18px; width: 60%; height: 50px;"%>
    </div>
  </div>
<% end %>
