<p id="notice"><%= notice %></p>

<!-- outermost row -->
<div class="row">

  <!-- image row -->
  <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url(concerts.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Book Reviews</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

  <!-- book reviews row -->
  <div class="row">

    <% @books.each do |book| %>

      <div class="col-sm-4 col-lg-4 col-md-4" >
        <div class="thumbnail" id="concerts">
          <a href='/books/<%= book.id %>' id="concert_title"><%= image_tag book.image.url(:large), :class => "concert_image"  %></a>
            <div class="caption">
                <h2><a href='/books/<%= book.id %>' id="book_title"><%= book.title %></a></h2>
                <p>
                  <% if book.review.length > 150 %>
                    <%= truncate(book.review, length: 150) %>
                    <%= link_to '...Read more', book_path(book), class: "read-more-#{book.id}" %>
                  <% else %>
                    <%= book.review %>
                  <% end %>
                </p>
            </div>
            <div class="ratings">
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                </p>
            </div>
            <div class="row">
                <p>
                  <% if current_user %>
                  <div class="col-md-3">
                    <%= link_to 'Edit', edit_book_path(book), :class => "btn btn-success" %>
                  </div>
                  <div class="col-md-3">
                   <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
                  </div>
                  <div class="col-md-6"> <p></p>
                  </div>
                <% end %>
                </p>
            </div>
          </div>
        </div>
    <% end %>

  </div>

<!-- closing outermost row -->
</div>

<br>

<% if current_user %>
  <%= link_to 'New Book Review', new_book_path, :class => "btn btn-info" %>
<% end %>
