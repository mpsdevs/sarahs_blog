<p id="notice"><%= notice %></p>
<!-- outermost row -->
<div class="row">

  <!-- image row -->
  <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url(concerts.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Concert Reviews</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

  <!-- concert reviews row -->
  <div class="row">

    <% @concerts.each do |concert| %>

      <div class="col-sm-4 col-lg-4 col-md-4" >
        <div class="thumbnail" id="concerts">
          <a href='/concerts/<%= concert.id %>'><%= image_tag concert.image.url(:large), :class => "concert_image"  %> </a>
            <div class="caption">
                <a href='/concerts/<%= concert.id %>'><h2 id="concert_title"><%= concert.title %></a></h2>
                <p>
                  <% if concert.review.length > 150 %>
                    <%= truncate(concert.review, length: 150) %>
                    <%= link_to '...Read more', concert_path(concert), class: "read-more-#{concert.id}" %>
                  <% else %>
                    <%= concert.review %>
                  <% end %>
                </p>
            </div>
            <div class="ratings">
                <p>
                    <span class="glyphicon glyphicon-music"></span>
                    <span class="glyphicon glyphicon-music"></span>
                    <span class="glyphicon glyphicon-music"></span>
                    <span class="glyphicon glyphicon-music"></span>
                    <span class="glyphicon glyphicon-music"></span>
                </p>
            </div>
            <div class="row">
                <p>
                  <% if current_user %>
                  <div class="col-md-3">
                    <%= link_to 'Edit', edit_concert_path(concert), :class => "btn btn-success" %>
                  </div>
                  <div class="col-md-3">
                   <%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
                  </div>
                  <div class="col-md-6"> <p></p>
                  </div>
                <% end %>
                </p>
            </div>
          </div>
        </div>
    <% end %>

  </div>

<!-- closing outermost row -->
</div>

<br>

<% if current_user %>
  <%= link_to 'New Concert Review', new_concert_path, :class => "btn btn-info" %>
<% end %>
