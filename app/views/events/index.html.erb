<p id="notice"><%= notice %></p>
<div class="flash-alert">
  <% if flash[:alert] %>
  <%= flash[:alert] %>
  <% end %>
</div>

<h1>Events</h1>



<div clas="row">
  <div class="col-lg-12">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th class="th">Start Time</th>
        <th class="th">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>

          <td><a href="/events/<%= event.id %>"><%= event.title %></a></td>
          <td class="th"><%= event.start_time %></td>
          <td class="th"><%= event.address %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<br>
<br>

<div><%= button_to 'New Event', new_event_path, method: :get, :class => "btn btn-info", :style => "margin-top: 20px;" %></div>
